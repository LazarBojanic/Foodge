<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:id="@+id/itemPersonalMeal"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:padding="4dp"
    android:orientation="horizontal"
    android:gravity="start">

    <TextView
        android:layout_margin="2dp"
        android:id="@+id/textViewMealName"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textSize="16sp"/>

    <ImageView
        android:layout_margin="2dp"
        android:id="@+id/imageViewMealImage"
        android:layout_width="60dp"
        android:layout_height="60dp"
        android:contentDescription="@string/mealImage" />

    <Button
        android:layout_margin="2dp"
        android:id="@+id/buttonEditPersonalMeal"
        android:layout_width="60dp"
        android:layout_height="60dp"
        android:foreground="@drawable/ic_edit_24dp"
        android:foregroundGravity="center"
        android:foregroundTint="?attr/colorOnPrimary"/>

    <Button
        android:layout_margin="2dp"
        android:id="@+id/buttonDeletePersonalMeal"
        android:layout_width="60dp"
        android:layout_height="60dp"
        android:foreground="@drawable/ic_delete_24dp"
        android:foregroundGravity="center"
        android:foregroundTint="?attr/colorOnPrimary"/>
</LinearLayout>