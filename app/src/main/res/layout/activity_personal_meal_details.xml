<?xml version="1.0" encoding="utf-8"?>
<androidx.coordinatorlayout.widget.CoordinatorLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".activity.PersonalMealDetailsActivity"
    xmlns:app="http://schemas.android.com/apk/res-auto">
    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent" >
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:padding="16dp">
            <ImageView
                android:id="@+id/imageViewMealImage"
                android:layout_width="match_parent"
                android:layout_height="200dp"
                android:contentDescription="@string/mealImage"
                android:scaleType="centerCrop" />

            <TextView
                android:id="@+id/textViewMealImagePath"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:paddingTop="8dp" />

            <TextView
                android:id="@+id/textViewStrMeal"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:paddingTop="16dp"
                android:textSize="20sp"
                android:textStyle="bold" />

            <TextView
                android:id="@+id/textViewStrCategory"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:paddingTop="8dp" />
            <TextView
                android:id="@+id/textViewMealType"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:paddingTop="8dp" />

            <TextView
                android:id="@+id/textViewStrYoutube"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:paddingTop="8dp" />

            <TextView
                android:id="@+id/textViewDateOfPrep"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:paddingTop="8dp" />

            <TextView
                android:id="@+id/textViewInstructions"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:paddingTop="8dp" />
            <TextView
                android:id="@+id/textViewRecipe"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:hint="@string/recipe"
                android:maxLines="150"
                android:autoSizeTextType="uniform"
                android:autoSizeMinTextSize="12sp"
                android:autoSizeMaxTextSize="18sp"/>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:padding="4dp"
                android:orientation="horizontal"
                android:gravity="center">
                <Button
                    android:layout_margin="2dp"
                    android:id="@+id/buttonEditPersonalMeal"
                    android:layout_width="60dp"
                    android:layout_height="60dp"
                    android:foreground="@drawable/ic_edit_24dp"
                    android:foregroundGravity="center"
                    android:foregroundTint="?attr/colorOnPrimary"/>
                <Button
                    android:layout_margin="2dp"
                    android:id="@+id/buttonDeletePersonalMeal"
                    android:layout_width="60dp"
                    android:layout_height="60dp"
                    android:foreground="@drawable/ic_delete_24dp"
                    android:foregroundGravity="center"
                    android:foregroundTint="?attr/colorOnPrimary"/>
            </LinearLayout>

        </LinearLayout>
    </ScrollView>
</androidx.coordinatorlayout.widget.CoordinatorLayout>



